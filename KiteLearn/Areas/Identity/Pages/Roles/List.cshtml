@page
@model KiteLearn.Areas_Identity_Pages_Roles.ListModel

@{
   ViewData["Title"] = "ListRoles";
}



<h3 align="center">Role Management. </h3>
<div align="center"><a href="/adminhome" class="btn btn-outline-primary">Back to Admin</a></div>
<hr />
<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].NormalizedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].ConcurrencyStamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Role) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalizedName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConcurrencyStamp)
            </td>
            <td>
               
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
